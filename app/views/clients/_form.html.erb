<%= form_for @client do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :phone %>
  <%= f.text_field :phone %><br />
  <%= f.label :notes %><br />
  <%= f.text_area :notes %><br />
  <%= f.label :color %>
  <%= f.check_box :color%><br />
  <%= f.label :cut %>
  <%= f.check_box :cut%><br />  
  <%= f.submit "Ok" %>

<% end %>
